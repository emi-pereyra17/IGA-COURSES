{
  "name": "iga/admin-api",
  "description": "API Admin para IGA Courses",
  "type": "project",
  "require": {
    "php": "^8.1",
    "codeigniter4/framework": "^4.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Config\\": "app/Config/"
    },
    "exclude-from-classmap": [
      "**/Database/Migrations/**"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"copy('.env.example', '.env');\""
    ]
  }
}
